@model List<Producto>

@{
    ViewBag.Title = "Cafetería";
}

<div class="mcontainer">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/cafeteria/cafeteria-3.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/cafeteria/cafeteria-4.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/cafeteria/cafeteria-5.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <br />    
    <h2 class="thead-light text-center">Productos</h2>
    <div class="card-deck align-content-center">
        @foreach (Producto prod in Model)
        {
            var rutaFoto = "~/images/" + prod.RutaFoto;
            <div class="card-m3 m-4">
                <div class="card-header text-center">
                    <h3>@prod.Descripcion</h3>
                </div>
                <img class="card-img-top" src="@rutaFoto" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@prod.Id" class="btn btn-primary">Ver</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@prod.Id" class="btn btn-primary">Editar</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@prod.Id" class="btn btn-danger">Borrar</a>
                </div>
            </div>
        }
    </div>
</div>
