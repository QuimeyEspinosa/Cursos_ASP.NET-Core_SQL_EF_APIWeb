@model Concesionario.Models.Car

@{
    ViewData["Title"] = "Details";
}
<div class="top-container">
    <div class="container">
        <h1 class="header-container">Detalles del vehículo</h1>
    </div>
</div>

<div class="container">

    <div class="item-container">
        @{
            var pathImg = "~/img/" + Model.PathImg;

            <!--Item-->
            <div class="car-item-details">

                <!--Img-->
                <img src="@pathImg" asp-append-version="true" />

                <!--Header-->
                <div class="car-item-header">
                    <h3> @Model.Descripcion</h3>
                </div>

                <!--Description-->
                <div class="car-item-description">
                    <ul>
                        <li>
                            <p> Modelo: @Model.Modelo </p>
                        </li>
                        <li>
                            <p>Precio: $@Model.Precio </p>
                        </li>
                        <li>
                            <p> Estado: @Model.Estado </p>
                        </li>
                        <li>
                            <p> Estado: @Model.Kilometros </p>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

<div class="container">
    <a asp-action="Index" class="btn-primary">Volver</a>
</div>