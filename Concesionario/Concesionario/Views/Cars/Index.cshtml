@model IEnumerable<Concesionario.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<div class="container">

    <h1 class="header-container">Nuestras unidades disponibles</h1>
    <hr />

    <div class="item-container">

        <form class="box" asp-controller="Cars" asp-action="Search">
            <input type="text" name="SearchString" placeholder="Buscar..." />
            @*<input type="submit" value="Buscar"/>*@
        </form>

        @foreach (var item in Model)
        {
            var pathImg = "~/img/" + item.PathImg;

            <!--Item-->
            <div class="car-item">

                <!--Img-->
                <img src="@pathImg" asp-append-version="true" />

                <!--Header-->
                <div class="car-item-header">
                    <h3>@item.Descripcion</h3>
                </div>

                <!--Description-->
                <div class="car-item-description">
                    <ul>
                        <li>
                            <p> Modelo: @item.Modelo </p>
                        </li>
                        <li>
                            <p>Precio: $@item.Precio </p>
                        </li>
                        <li>
                            <p> Estado: @item.Estado </p>
                        </li>
                    </ul>
                </div>

                <!--Footer-->
                <div class="car-item-footer">
                    <ul>
                        <li>
                            <a asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        </li>
                        <li>
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        </li>
                        <li>
                            <a asp-controller="Cars" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </li>
                    </ul>
                </div>

            </div>
        }
    </div>
</div>

<div class="container">
    <div class="pagination">
        <ul>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
        </ul>
    </div>
</div>

<div class="container">
    <p>
        <a asp-action="Create" class="btn-primary">Nueva publicación</a>
    </p>
</div>

